<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassBranchDetails">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Class Branch Details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Batch"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/year3"
        tools:text="Batches" />

    <TextView
        android:id="@+id/strength2"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/year4"
        android:layout_alignTop="@+id/Batch"
        tools:text="Strength" />

    <TextView
        android:id="@+id/year3"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Year12"
        android:layout_marginTop="159dp"
        tools:text="Year" />

    <TextView
        android:id="@+id/branch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Batch"
        android:layout_marginStart="14dp"
        tools:text="Branch" />

    <EditText
        android:id="@+id/Year12"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText4"
        android:layout_marginStart="114dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/year4"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Year12"
        android:layout_marginEnd="91dp"
        android:ems="10"
        android:hint="Strength"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Batches"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Year12"
        android:ems="10"
        android:hint="Batches"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/year5"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText4"
        android:layout_marginStart="114dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="193dp"
        android:ems="10"
        android:hint="Comp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/ClassSave"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classAdd"
        android:layout_marginStart="-19dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="+"
        tools:text="Save" />

    <Button
        android:id="@+id/classAdd"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="183dp"
        android:layout_toStartOf="@+id/textView3"
        android:text="+" />

</RelativeLayout>