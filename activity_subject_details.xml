<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    android:layout_height="match_parent"
    tools:context=".SubjectDetails">

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/count"
        android:layout_alignTop="@+id/tv1"
        android:text="Year" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv4"
        android:layout_marginEnd="130dp"
        android:text="Duration" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv4"
        android:layout_marginStart="123dp"
        android:text="Shortcut" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="107dp"
        android:text="Name" />

    <EditText
        android:id="@+id/count"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/subject"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:hint="1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv3"
        android:layout_alignTop="@+id/count"
        android:ems="10"
        android:hint="00:00"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/shortcut"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/count"
        android:layout_marginStart="115dp"
        android:ems="10"
        android:hint="SW"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:hint="Software "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv4"
        android:layout_alignTop="@+id/addField"
        android:text="Save" />

    <Button
        android:id="@+id/addField"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/subject"
        android:layout_marginBottom="201dp"
        android:layout_marginStart="15dp"
        android:text="+" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Subject Details" />

</RelativeLayout>